{% extends 'base.html.twig' %}

{% block title %}
    Ajout d'un utilisateur
{% endblock %}

{% block body %}

    <h1 class="mt-5 text-white text-center">Ajout d'un utilisateur</h1>

    <div class="row mt-2 text-white">
        <div class="col-sm-6 offset-sm-3 col-md-12 offset-md-0 col-lg-6 offset-lg-3 col-12">
            {{ form_start(form, {'attr': {'class': 'form-signin mt-5'}}) }}

            {% if not form.children.plainPassword.first.vars.valid %}
                {% for error in edit_form.children.plainPassword.first.vars.errors %}
                    <div class="text-center mb-7">
                        <span class="mb-3 font-weight-normal text-danger ft-18">{{ error.message }}</span>
                    </div>
                {% endfor %}
            {% endif %}
            <div class="card bg-darkin">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6 col-12">
                            <div class="form-group bmd-form-group">
                                {{ form_label(form.username) }}
                                {{ form_widget(form.username, {'attr': {'class': 'form-control text-white ft-24'}}) }}
                            </div>
                            <div class="form-group">
                                {{ form_label(form.roles) }}
                                {{ form_widget(form.roles) }}
                            </div>
                        </div>
                        <div class="col-sm-6 col-12">
                            <div class="form-group bmd-form-group">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control text-white ft-24'}}) }}
                            </div>
                            <div class="form-group bmd-form-group">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control text-white ft-24'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="form-group bdm-form-group mt-5">
                                <button class="btn btn-lg btn-success btn-block active" type="submit" id="_submit" name="_submit">
                                    Cr√©er &nbsp;&nbsp;&nbsp;&nbsp;
                                    <i class="material-icons">done_all</i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <ul class="list-unstyled mt-5">
        <li>
            <a class="link-unstyled" href="{{ path('user_index') }}">
                <button type="button" class="btn btn-info btn-lg active">
                    <i class="material-icons md-24 text-white">arrow_back</i>
                </button>
            </a>
        </li>
    </ul>

{% endblock %}