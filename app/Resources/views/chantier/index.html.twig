{% extends 'base.html.twig' %}

{% block title %}
    Liste des chantiers
{% endblock %}

{% block body %}

    <style>
        input.search::placeholder {
            color: white !important;
            opacity: 1; /* Firefox */
        }

        .hover-chantier {
            transition: transform 0.3s, transition 0.5s;
        }

